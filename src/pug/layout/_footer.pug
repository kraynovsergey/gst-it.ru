            .footer-form__content.radius-30
                h3.footer-form__title Отправьте заявку для получения консультации
                form.footer-form__form.form(action="#" method="post" data-policy-form)
                    .footer-form__cols
                        input.form__input.radius-10(type="text" name="name" placeholder="Имя*")
                        input.form__input.radius-10(type="tel" name="phone" placeholder="+7 (ХХХ) ХХХ-ХХ-ХХ*" data-tel)
