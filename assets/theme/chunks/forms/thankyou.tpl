<div class="modal" id="modal-thankyou" data-lenis-prevent>
    <div class="modal__content radius-20">
        <button class="modal__close btn-reset" type="button" data-fancybox-close>
            <svg width="30" height="30">
                <use xlink:href="assets/theme/img/icons/icons.svg#modal-close"></use>
            </svg>
        </button>
        <section class="modal__thankyou">
            <h3 class="modal__title">{'thankyou_title' | config}</h3>
            <p class="modal__text">{'thankyou_subtitle' | config}</p>
            <button class="modal__btn btn _blue btn-reset" type="button" data-fancybox-close>{'thankyou_btn' | config}</button>
        </section>
    </div>
</div>